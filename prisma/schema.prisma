// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Album {
  id          Int      @id @default(autoincrement())
  record      String
  cover       String?  @map(name: "cover_url")
  releaseDate DateTime @map(name: "release_date")
  spotify     String?  @map(name: "spotify_url")
  songs       Song[]
  Band        Band[]
}

model Band {
  id     Int      @id @default(autoincrement())
  name   String
  Logo   String?
  Genre  String
  origin String
  artist Artist[]
  album  Album[]
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String
  picture   String?
  birthDate DateTime @map(name: "birth")
  Song      Song[]
  Band      Band[]
}

model Song {
  id      Int      @id @default(autoincrement())
  title   String
  publish Boolean
  artist  Artist[]
  Album   Album?   @relation(fields: [albumId], references: [id])
  albumId Int?
}
